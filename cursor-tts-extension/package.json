{
  "name": "cursor-chat-reader",
  "displayName": "Cursor Chat Reader",
  "description": "Read Cursor chat responses aloud using text-to-speech",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Accessibility",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorChatReader.readLastResponse",
        "title": "Read Last Chat Response",
        "icon": {
          "light": "resources/read-light.svg",
          "dark": "resources/read-dark.svg"
        }
      },
      {
        "command": "cursorChatReader.readSelected",
        "title": "Read Selected Text",
        "icon": {
          "light": "resources/read-light.svg",
          "dark": "resources/read-dark.svg"
        }
      },
      {
        "command": "cursorChatReader.stopReading",
        "title": "Stop Reading",
        "icon": {
          "light": "resources/stop-light.svg",
          "dark": "resources/stop-dark.svg"
        }
      },
      {
        "command": "cursorChatReader.toggleAutoRead",
        "title": "Toggle Auto-Read (Read responses automatically)"
      }
    ],
    "keybindings": [
      {
        "command": "cursorChatReader.readLastResponse",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      },
      {
        "command": "cursorChatReader.readSelected",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s"
      },
      {
        "command": "cursorChatReader.stopReading",
        "key": "ctrl+alt+x",
        "mac": "cmd+alt+x"
      }
    ],
    "configuration": {
      "title": "Cursor Chat Reader",
      "properties": {
        "cursorChatReader.voice": {
          "type": "string",
          "default": "",
          "description": "Preferred voice name (leave empty for default)"
        },
        "cursorChatReader.rate": {
          "type": "number",
          "default": 1,
          "minimum": 0.1,
          "maximum": 10,
          "description": "Speech rate (0.1 to 10.0)"
        },
        "cursorChatReader.pitch": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 2,
          "description": "Speech pitch (0 to 2)"
        },
        "cursorChatReader.volume": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 1,
          "description": "Speech volume (0 to 1)"
        },
        "cursorChatReader.autoRead": {
          "type": "boolean",
          "default": false,
          "description": "Automatically read chat responses when they complete"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^12.0.0",
    "typescript": "^4.5.5"
  }
}
