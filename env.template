# JustData Environment Configuration
# Copy your exact credentials from your existing .env file into the corresponding fields below
# Then rename this file to .env

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL (copy your exact DATABASE_URL)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# BigQuery Configuration (copy your exact values from your other project)
BQ_TYPE=your-bq-type
BQ_PROJECT_ID=your-bq-project-id
BQ_PRIVATE_KEY_ID=your-bq-private-key-id
BQ_PRIVATE_KEY=your-bq-private-key
BQ_CLIENT_EMAIL=your-bq-client-email
BQ_CLIENT_ID=your-bq-client-id
BQ_AUTH_URI=your-bq-auth-uri
BQ_TOKEN_URI=your-bq-token-uri
BQ_AUTH_PROVIDER_X509_CERT_URL=your-bq-auth-provider-x509-cert-url
BQ_CLIENT_X509_CERT_URL=your-bq-client-x509-cert-url
BIGQUERY_DATASET=your-bigquery-dataset-name

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis URL (copy your exact REDIS_URL)
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI SERVICES - COPY YOUR EXACT API KEYS FROM YOUR OTHER PROJECT
# =============================================================================
# OpenAI GPT API Key (copy your exact key)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude API Key (copy your exact key)
CLAUDE_API_KEY=your-claude-api-key-here

# =============================================================================
# HUBSPOT INTEGRATION - COPY YOUR EXACT CREDENTIALS
# =============================================================================
# HubSpot Private App Access Token (copy from HubSpot Settings → Integrations → Private Apps)
HUBSPOT_ACCESS_TOKEN=your-hubspot-access-token-here

# HubSpot Portal ID (copy from HubSpot Settings → Account Defaults)
HUBSPOT_PORTAL_ID=your-portal-id-here

# HubSpot API Key (if using API key authentication)
HUBSPOT_API_KEY=your-hubspot-api-key-here

# Enable/disable HubSpot synchronization
HUBSPOT_SYNC_ENABLED=True

# HubSpot Webhook Secret (for webhook authentication)
HUBSPOT_WEBHOOK_SECRET=your-webhook-secret-here

# =============================================================================
# DATA SOURCE URLs - COPY YOUR EXACT URLs
# =============================================================================
# FDIC Data API URL (copy your exact URL)
FDIC_DATA_URL=https://banks.data.fdic.gov/api

# HMDA Data API URL (copy your exact URL)
HMDA_DATA_URL=https://ffiec.cfpb.gov/api

# SBA Data API URL (copy your exact URL)
SBA_DATA_URL=https://api.sba.gov

# =============================================================================
# REPORTING CONFIGURATION
# =============================================================================
REPORT_OUTPUT_DIR=./data/reports
MAX_REPORT_SIZE_MB=50

# =============================================================================
# CACHE AND RATE LIMITING
# =============================================================================
CACHE_TTL_SECONDS=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# CORS ORIGINS - COPY YOUR EXACT ORIGINS
# =============================================================================
# Comma-separated list of allowed origins (copy your exact values)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ACCESS_TOKEN_EXIRE_MINUTES=30

# =============================================================================
# FIREBASE AUTH (required for Google sign-in)
# =============================================================================
# Backend needs a Firebase/Google service account to verify ID tokens.
# Firebase Console → Project settings (justdata-ncrc) → Service accounts → Generate new private key.
# Option A: path to the downloaded JSON file
# FIREBASE_CREDENTIALS=/path/to/firebase-service-account.json
# Option B: paste the JSON as one line. Use single quotes around the value so double quotes inside are fine:
# FIREBASE_CREDENTIALS_JSON='{"type":"service_account","project_id":"justdata-ncrc",...}'
# If unset, GOOGLE_APPLICATION_CREDENTIALS_JSON is used as fallback.

# =============================================================================
# GOOGLE CLOUD CONFIGURATION (if using GCP)
# =============================================================================
# Google Cloud Project ID (copy your exact PROJECT_ID from BQ_PROJECT_ID)
GOOGLE_CLOUD_PROJECT_ID=your-bq-project-id

# Google Cloud Region (copy your exact region)
GOOGLE_CLOUD_REGION=us-east1

# =============================================================================
# MAPBOX CONFIGURATION
# =============================================================================
# Mapbox Access Token for map rendering (must be PUBLIC token starting with pk.)
MAPBOX_ACCESS_TOKEN=pk.your-mapbox-public-token-here

# Mapbox Style URL (optional - defaults to custom JustData style)
MAPBOX_STYLE=mapbox://styles/jedlebi/cku2skjsw2o5817r19li2o5y1

